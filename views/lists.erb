<ul id='lists'>
  <% @lists.each_with_index do |list, idx| %>
    <li>
      <a href="/lists/<%= idx %>">
        <h2><%= list[:name] %></h2>
      </a> 
      <p>
        <a href='/lists/<%= idx %>/edit'>Edit List</a>
        <%= list[:todos].size %>
      </p>
    </li>
  <% end %>
</ul>

<% content_for :header_link  do %>
  <a href='/lists/new'>Add New List</a>
<% end %>